{
  "name": "dora-front",
  "version": "0.0.1",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "dev": "svelte-kit dev --host",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview --host",
    "start": "node build",
    "lint": "stylelint \"**/*.{css,html,svelte}\" && prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. . && eslint --ignore-path .gitignore --fix .",
    "formatstyle": "stylelint --fix \"**/*.{css,html,svelte}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@sentry/browser": "^6.13.3",
    "@sentry/tracing": "^6.13.3",
    "@sveltejs/adapter-node": "next",
    "@sveltejs/kit": "next",
    "@tailwindcss/typography": "^0.4.1",
    "@tiptap/core": "^2.0.0-beta.125",
    "@tiptap/extension-placeholder": "^2.0.0-beta.35",
    "@tiptap/starter-kit": "^2.0.0-beta.127",
    "autoprefixer": "^10.3.7",
    "cssnano": "^5.0.8",
    "eslint": "^7.32.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "husky": "^7.0.2",
    "insane": "^2.6.2",
    "lint-staged": "^11.2.3",
    "postcss": "^8.3.9",
    "postcss-load-config": "^3.1.0",
    "prettier": "~2.4.1",
    "prettier-plugin-svelte": "sveltejs/prettier-plugin-svelte#934b37f",
    "remixicon": "^2.5.0",
    "showdown": "^1.9.1",
    "stylelint": "^13.13.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-standard": "^22.0.0",
    "svelte": "^3.44.0",
    "svelte-preprocess": "^4.9.5",
    "tailwindcss": "^2.2.17"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,svelte}": [
      "prettier --write --plugin-search-dir=.",
      "eslint --ignore-path .gitignore --fix"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --write --plugin-search-dir=."
    ],
    "*.{css,html,svelte}": [
      "stylelint --fix"
    ]
  }
}
