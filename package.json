{
  "name": "dora-front",
  "version": "0.0.1",
  "engines": {
    "npm": ">= 8",
    "node": ">= 16"
  },
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "start": "node build",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. . && eslint --ignore-path .gitignore --fix .",
    "prepare": "husky install",
    "security-scan": "ggshield scan  path -r . -y"
  },
  "devDependencies": {
    "@sentry/browser": "^6.17.0",
    "@sentry/tracing": "^6.17.0",
    "@sveltejs/adapter-node": "next",
    "@sveltejs/kit": "next",
    "@tailwindcss/typography": "^0.5.0",
    "@tiptap/core": "^2.0.0-beta.166",
    "@tiptap/extension-placeholder": "^2.0.0-beta.46",
    "@tiptap/starter-kit": "^2.0.0-beta.174",
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.16",
    "insane": "^2.6.2",
    "postcss-load-config": "^3.1.1",
    "remixicon": "^2.5.0",
    "showdown": "^1.9.1",
    "svelte": "^3.46.2",
    "svelte-preprocess": "^4.10.2",
    "tailwindcss": "^3.0.16",
    "eslint": "^8.7.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.6.0"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,svelte}": [
      "prettier --write --plugin-search-dir=.",
      "eslint --ignore-path .gitignore --fix"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --write --plugin-search-dir=."
    ],
    "*": [
      "ggshield scan pre-commit"
    ]
  }
}
